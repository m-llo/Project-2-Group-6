<div class="container-fluid">
  <div class="row">
    <nav id="savedHobbies" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
      <div class="position-sticky pt-3">
        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>My Notes</span>
        </h6>


        <div class="list-container">
          <div class="card">
            <ul class="nav flex-column list-group" id="myNotes">

              {{#each NotesList.notes as |notes|}}
              <li class="list-group-item"><span><a href="/notes/{{notes.id}}">{{this.title}}</a></span></li>

              {{/each}}
            </ul>
          </div>
        </div>

        {{!-- to do: loop through saved notes and create li's for each --}}
        {{!-- sample li
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">
            <span data-feather="home"></span>
            Dashboard
          </a>
        </li>
        </ul> --}}
      </div>
    </nav>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
        id="primaryVideo">
        {{!-- <iframe src="{{{youtube url from search}}}" title="{{{video title from search}}}"> width="" height=""--}}

          {{!-- </iframe> --}}
        {{!-- populates with selected videos after YT API query using iframe tags --}}
      </div>
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
        id="newNote">
        <h1 class="h2">Notes</h1>
        {{!-- form to create a new notes --}}
        <i class="fas fa-pen text-light new-note"></i>
      </div>

      <div class="note-container">
        <label for="dish_name">
          Notes Title:
        </label>
        <br />
        <textarea class="note-title" id="title" name="note_title" rows="2" cols="60">
                  {{singleNotes.title}}
        </textarea>
        <br />
        <label for="description">
          Notes text:
        </label>
        <br />
        <textarea class="note-textarea" id="text" name="note_text" rows="7" cols="60">
                  {{singleNotes.text}}
          </textarea>
        <br />
        <div class="form-group">
          <button id="btn btn-primary" type="submit">Save</button>
        </div>
      </div>







      </form>

  </div>

  </main>
</div>
</div>


